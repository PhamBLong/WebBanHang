@model IEnumerable<WebBanHang.Models.EF.SanPham>

@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        var strImg = "";
        var img = item.HinhanhSPs.FirstOrDefault(x => x.isDefault);
        if (img != null)
        {
            strImg = img.Image;
        }

        <div class="product-item @item.LoaiSps.Alias">
            <div class="product discount product_filter">
                <div class="product_image">
                    <img src="@strImg" alt="@item.tensanpham">
                </div>
                <div data-id="@item.id" class="favorite favorite_left"></div>
                @if (item.khuyenmai > 0)
                {
                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>sale</span></div>
                }
                @*<div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-$20</span></div>*@
                <div class="product_info">
                    <h6 class="product_name"><a href="/chi-tiet/@item.alias-p@(item.id)">@item.tensanpham</a></h6>
                    @if (item.khuyenmai > 0)
                    {
                        <div class="product_price">@WebBanHang.Common.Common.FormatNumber(item.khuyenmai)<span>@WebBanHang.Common.Common.FormatNumber(item.gia)</span></div>

                    }
                    else
                    {
                        <div class="product_price">@WebBanHang.Common.Common.FormatNumber(item.gia)</div>
                    }

                </div>
            </div>
            <div class="red_button add_to_cart_button"><a href="#" class="btnAddtoCart" data-id="@item.id">add to cart</a></div>
        </div>

    }
}
