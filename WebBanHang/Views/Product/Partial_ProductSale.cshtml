@model IEnumerable<WebBanHang.Models.EF.SanPham>
@using WebBanHang.Common
@if (Model != null && Model.Any())
{
    <div class="best_sellers">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <div class="section_title new_arrivals_title">
                        <h2>SẢN PHẨM BÁN CHẠY</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="product_slider_container">
                        <div class="owl-carousel owl-theme product_slider">

                            @foreach (var item in Model)
                            {

                                var strImg = "";
                                var img = item.HinhanhSPs.FirstOrDefault(x => x.isDefault);
                                if (img != null)
                                {
                                    strImg = img.Image;
                                }

                                <div class="owl-item product_slider_item">
                                    <div class="product-item" @item.LoaiSps.Alias>
                                        <div class="product discount product_filter">
                                            <div class="product_image">
                                                <img src="@strImg" alt="@item.tensanpham">
                                            </div>
                                            <div class="favorite favorite_left"></div>
                                            @if (item.khuyenmai > 0)
                                            {
                                                <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>sale</span></div>
                                            }

                                            <div class="product_info">
                                                <h6 class="product_name"><a href="/chi-tiet/@item.alias-p@(item.id)">@item.tensanpham</a></h6>
                                                @if (item.khuyenmai > 0)
                                                {
                                                    <div class="product_price">@WebBanHang.Common.Common.FormatNumber(item.khuyenmai, 0)<span>@WebBanHang.Common.Common.FormatNumber(item.gia, 0)</span></div>

                                                }
                                                else
                                                {
                                                    <div class="product_price">@WebBanHang.Common.Common.FormatNumber(item.gia, 0)</div>
                                                }
                                            </div>
                                        </div>
                                        <div class="red_button add_to_cart_button"><a href="#" class="btnAddtoCart" data-id="@item.id">add to cart</a></div>
                                    </div>
                                </div>
                            }

                        </div>
                            <!-- Slider Navigation -->

                            <div class="product_slider_nav_left product_slider_nav d-flex align-items-center justify-content-center flex-column">
                                <i class="fa fa-chevron-left" aria-hidden="true"></i>
                            </div>
                            <div class="product_slider_nav_right product_slider_nav d-flex align-items-center justify-content-center flex-column">
                                <i class="fa fa-chevron-right" aria-hidden="true"></i>
                            </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
}